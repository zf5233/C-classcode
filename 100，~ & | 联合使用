#include<stdio.h>
int main()
{
	int a = 11;//....00001011和0100
	a = a | (1 << 2);//按位或
	printf("%d\n", a);//15(....00001111)

	//~按位取反 | 按位或 & 按位与
	//00000000000000000000000000000001右移2位->
	//00000000000000000000000000000100按位取反
	//->  11111111111111111111111111111011
	//  和00000000000000000000000000001111按位与
	//得到00000000000000000000000000001011
    a = a & (~(1<<2));
	printf("%d\n", a);//11
	return 0;
}
