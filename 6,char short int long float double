#include <stdio.h>

int main()
{
    printf("%d\n",(char));\\1 （1个字节，8个比特位）
    printf("%d\n",(short));\\2
    printf("%d\n",(int));\\4   （32个比特位，可表达0~2^32-1的范围）
    printf("%d\n",(long));\\4/8  sizeof(long)>=sizeof(int)
    printf("%d\n",(long long));\\8
    printf("%d\n",(float));\\4
    printf("%d\n",(double));\\8
    return 0;
}
