#include<stdio.h>
int my_strlen(char* str)
{
	int count = 0;
	while (*str!='\0')
	{
		count++;
		str++;
	}
	return count;
}
void reverse_char(char arr[])
{
	int left = 0;
	int right = my_strlen(arr)-1;
	while (left < right)
	{
		int tmp = arr[left];
		arr[left] = arr[right];
		arr[right] = tmp;
		left++;
		right--;
	}
}
int main()
{
	char arr[] = "abcdef";
	reverse_char(arr);
	printf("%s\n", arr);
	return 0;
}
