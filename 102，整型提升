#include<stdio.h>
int main()
{
	//整型提升
	char a = 3;
	//00000011首先整型截断
	char b = 127;//char有符号
	//01111111
	char c = a + b;
	//整型提升：按符号位补24位，无符号补0
	//相加：
	//00000000000000000000000000000011 a
	//00000000000000000000000001111111 b
	//00000000000000000000000010000010 c截断
	printf("%d\n", c);
	//10000010(%d打印的是整型，需要整型提升)
	//11111111111111111111111110000010补码
	//10000000000000000000000011111110原码
	//-126
	return 0;
}
